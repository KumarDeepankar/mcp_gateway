# Copy this file to .env and update values for your environment

# MCP Gateway URL
# Local: http://localhost:8021
# Docker: http://tools-gateway:8021 or http://host.docker.internal:8021
# Production: http://gateway-internal-ip:8021
MCP_GATEWAY_URL=http://localhost:8021

# Origin for CORS validation
# Local: http://localhost:8023
# Production: https://aertkhkkg.xyz.com
AGENTIC_SEARCH_ORIGIN=http://localhost:8023

# Service Configuration
HOST=0.0.0.0
PORT=8023

# Ollama Configuration
# Local: http://localhost:11434
# Docker: http://ollama:11434 or http://host.docker.internal:11434
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# Logging
LOG_LEVEL=INFO
